# =============================================================================
# LEGAL AI CHATBOT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# GEMINI API CONFIGURATION (REQUIRED)
# =============================================================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=models/gemini-2.5-flash
GEMINI_EMBEDDING_MODEL=models/text-embedding-004

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For local development (PostgreSQL)
POSTGRES_USER=legalai
POSTGRES_PASSWORD=legalai_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=legalai_db

# For Railway/Production (automatically set by Railway)
# DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# SECURITY
# =============================================================================
# Generate a secure random key (at least 32 characters)
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-ME-TO-A-SECURE-RANDOM-KEY-AT-LEAST-32-CHARACTERS

# =============================================================================
# REDIS (OPTIONAL - for caching and rate limiting)
# =============================================================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# For Railway (automatically set)
# REDIS_URL=redis://user:password@host:port

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# FILE UPLOADS
# =============================================================================
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=./data/uploads

# =============================================================================
# RAG CONFIGURATION
# =============================================================================
CHUNK_SIZE=600
CHUNK_OVERLAP=100
RETRIEVAL_TOP_K=5
MMR_DIVERSITY_SCORE=0.3
